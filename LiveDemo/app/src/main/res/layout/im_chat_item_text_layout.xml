<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingBottom="2dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="2dp">

    <com.daweibayu.livedemo.RoundCornerImageView
        android:id="@+id/im_chat_item_text_avatar_view"
        android:layout_width="22dp"
        android:layout_height="22dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/im_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/im_chat_item_text_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"/>

        <TextView
            android:id="@+id/im_chat_item_text_content_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="content"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>