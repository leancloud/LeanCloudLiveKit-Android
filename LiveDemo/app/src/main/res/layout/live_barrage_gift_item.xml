<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/live_barrage_gift_icon_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/gift_demo"/>

    <TextView
        android:id="@+id/live_barrage_gift_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/live_barrage_gift_icon_view"
        android:text="user name"/>

    <TextView
        android:id="@+id/live_barrage_gift_number_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/live_barrage_gift_icon_view"
        android:visibility="gone"
        android:text="number"/>
</RelativeLayout>